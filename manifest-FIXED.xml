<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- Basic Settings -->
  <Id>d6ff5248-95b4-4400-8f5d-4ce60c4ed0be</Id>
  <Version>1.1.0.0</Version>
  <ProviderName>KOMBIT</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="Meeting Template"/>
  <Description DefaultValue="Automatically inserts meeting template when creating appointments"/>
  <IconUrl DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net"/>

  <AppDomains>
    <AppDomain>https://icy-hill-0716f1a03.1.azurestaticapps.net</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.10"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/taskpane.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit"/>
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="ReadOrEdit"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- VersionOverrides for Event-Based Activation -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <Requirements>
        <bt:Sets DefaultMinVersion="1.10">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">

          <!-- Event-based activation runtime -->
          <Runtimes>
            <Runtime resid="WebViewRuntime.Url">
              <Override type="javascript" resid="JSRuntime.Url"/>
            </Runtime>
          </Runtimes>

          <DesktopFormFactor>

            <!-- Function File for commands (fallback) -->
            <FunctionFile resid="Commands.Url"/>

            <!-- Extension Point: AppointmentOrganizer Compose -->
            <ExtensionPoint xsi:type="AppointmentOrganizerCommandSurface">

              <!-- Ribbon Button (optional fallback) -->
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="GroupLabel"/>
                  <Control xsi:type="Button" id="msgReadOpenPaneButton">
                    <Label resid="TaskpaneButton.Label"/>
                    <Supertip>
                      <Title resid="TaskpaneButton.Label"/>
                      <Description resid="TaskpaneButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>

            </ExtensionPoint>

            <!-- LaunchEvent: Auto-insert on new appointment -->
            <ExtensionPoint xsi:type="LaunchEvent">
              <LaunchEvents>
                <LaunchEvent Type="OnNewAppointmentOrganizer" FunctionName="onNewAppointmentOrganizer"/>
              </LaunchEvents>
              <SourceLocation resid="WebViewRuntime.Url"/>
            </ExtensionPoint>

          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/assets/icon-16.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/assets/icon-32.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/assets/icon-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Commands.Url" DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/commands.html"/>
          <bt:Url id="Taskpane.Url" DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/taskpane.html"/>
          <bt:Url id="WebViewRuntime.Url" DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/commands.html"/>
          <bt:Url id="JSRuntime.Url" DefaultValue="https://icy-hill-0716f1a03.1.azurestaticapps.net/commands.js"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="Meeting Template"/>
          <bt:String id="TaskpaneButton.Label" DefaultValue="Show Template"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Opens the meeting template panel"/>
        </bt:LongStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>

</OfficeApp>
